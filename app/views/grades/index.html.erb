<p id="notice"><%= notice %></p>

<h1>Listing Grades</h1>

<table class="table table-bordered">
  <thead>
    <tr class="active">
      <th>Value</th>
      <th>Period</th>
      <th>Graduate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.value %></td>
        <td><%= grade.period %></td>
        <td><%= grade.graduate %></td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grade', new_grade_path, class: 'btn  btn-primary btn-sm' %>

<br>
<br>

<svg id="grades"></svg>